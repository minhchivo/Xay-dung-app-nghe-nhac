<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="3dp"
        android:scaleType="fitXY"
        android:id="@+id/imageViewbaihathot"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="18sp"
        android:text="Ten bai Hat"
        android:layout_toRightOf="@id/imageViewbaihathot"
        android:textColor="#363636"
        android:id="@+id/textviewtenbaihathot"></TextView>
    <TextView
        android:textColor="#74363636"
        android:singleLine="true"
        android:text="TenCasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewcasibaihathot"
        android:layout_below="@id/textviewtenbaihathot"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/imageViewbaihathot"></TextView>
    <ImageView
        android:layout_marginRight="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/imageviewluotthich"
        android:src="@drawable/iconlove"></ImageView>
</RelativeLayout>