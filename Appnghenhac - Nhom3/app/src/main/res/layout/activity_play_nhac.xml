<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7d8074"
    tools:context=".activity.PlayNhacActivity"
    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbarplaynhac"
        app:titleTextColor="@android:color/white"
        ></androidx.appcompat.widget.Toolbar>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:id="@+id/viewpagerplaynhac"
        ></androidx.viewpager.widget.ViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff"
                android:id="@+id/textviewtimesong"
                android:layout_weight="0.5"
                android:text="00:00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center">
            </TextView>
            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:id="@+id/seekbarplaynhac">
            </SeekBar>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff"
                android:id="@+id/textviewtitletimesong"
                android:layout_gravity="center"
                android:text="00:00"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>
    </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:src="@drawable/iconrandommusic"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/imagebuttonrandom">
            </ImageButton>

            <ImageButton
                android:id="@+id/iconpre"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconnext"></ImageButton>

            <ImageButton
                android:id="@+id/imagebuttonplay"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"

                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconplaymussic"></ImageButton>

            <ImageButton
                android:id="@+id/iconnext"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconpre"></ImageButton>
            <ImageButton
                android:src="@drawable/iconrepeat"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:id="@+id/iconrepeat"
                android:layout_marginLeft="15dp"
                >
            </ImageButton>


        </LinearLayout>
        </LinearLayout>


</LinearLayout>